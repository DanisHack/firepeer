{
  "name": "firepeer",
  "version": "0.0.7",
  "description": "easy and secure signalling for simple-peer through firebase",
  "main": "lib/firepeer.js",
  "browser": "lib/firepeer.min.js",
  "typings": "lib/firepeer.d.ts",
  "repository": "https://github.com/natzcam/firepeer",
  "license": "MIT",
  "keywords": [
    "simple-peer",
    "signalling",
    "node",
    "browser",
    "p2p",
    "firebase",
    "webrtc"
  ],
  "scripts": {
    "clean": "trash lib",
    "build": "run-s build:*",
    "build:main": "tsc",
    "build:browser": "browserify -s FirePeer src/firepeer.ts -p [ tsify ] | minify > lib/firepeer.min.js",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s clean build test:*",
    "test:lint": "tslint --project .",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:int": "cross-env DEBUG=firepeer ava lib/test/*.test.js",
    "doc": "typedoc src/firepeer.ts --target ES6 --mode file --theme markdown --excludeProtected --excludePrivate --excludeExternals --out reference",
    "version": "standard-version",
    "release": "run-s test doc version",
    "unit": "run-s clean build test:unit",
    "int": "run-s clean build test:int"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "debug": "^4.1.0",
    "events": "^3.0.0",
    "firebase": "^5.5.4",
    "simple-peer": "^9.1.2"
  },
  "devDependencies": {
    "@types/debug": "0.0.31",
    "@types/dotenv": "^6.1.0",
    "@types/p-event": "^1.3.0",
    "@types/simple-peer": "^6.1.5",
    "ava": "1.0.0-beta.7",
    "babel-minify": "^0.5.0",
    "browserify": "^16.2.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "firebase-mock": "^2.2.10",
    "npm-run-all": "^4.1.3",
    "p-event": "^2.1.0",
    "prettier": "^1.14.3",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "tsify": "^4.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "typedoc": "^0.12.0",
    "typedoc-plugin-markdown": "^1.1.17",
    "typescript": "^3.0.3",
    "wrtc": "^0.2.1"
  },
  "ava": {
    "failFast": true,
    "sources": [
      "lib/**/*.js"
    ],
    "verbose": true,
    "timeout": "1m"
  },
  "prettier": {
    "singleQuote": true
  }
}
